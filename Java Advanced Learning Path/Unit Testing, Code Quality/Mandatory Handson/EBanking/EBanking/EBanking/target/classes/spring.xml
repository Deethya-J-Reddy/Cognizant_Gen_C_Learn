<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">
   
   
   <context:property-placeholder location="classpath:accounts.properties"></context:property-placeholder>
    
    
   <bean class="com.cts.EBanking.BankAccount" id="BankAccount" abstract="true">
   </bean>
   
	<bean class="com.cts.EBanking.SmartBankAccount" id="smartBankAccount">
   	<constructor-arg type="int" value="100" />
   	<constructor-arg type="String" value="Joe"/>
   	<constructor-arg type="double" value="10000"/>
   	<constructor-arg>
   	<list>  
		<value>${current}</value>
		<value>${recurring}</value>
		<value>${fixed}</value> 
	</list>  
   	</constructor-arg>
   </bean>
</beans>